{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "declaration": false,
    "outDir": "./api-dist",
    "rootDir": "./api"
  },
  "include": ["api/**/*.ts"],
  "exclude": ["node_modules", "dist", "api/**/*.sql"]
}
